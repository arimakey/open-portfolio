---
import TextureFilter from "../TextureFilter.astro";
const { image, title="soon", slug="projects" } = Astro.props;    
---

<article class="proyect">
    <a href={slug} >
        <div class=" proyect__image">
            <TextureFilter src={image} transition=`projects-${title}`/>
        </div>
        <div>
            <h4 class="proyect__title">{ title }</h4>
        </div>
    </a>
</article>

<style>
    .proyect {
        position: relative;
        overflow: hidden;
        height: 100%;
        width: 100%;
    }

    .proyect__title {
        position: absolute;
        bottom: 1rem;
        right: 1rem;
        color: var(--contrast-text);
        font-family: "Libre Barcode 39 Text", system-ui;
        font-size: 3rem;
        font-weight: 500;
        font-style: normal;
        text-shadow: 0 0 10px var(--glow-color);
        transition: all 0.25s ease-out;
    }

    .proyect__image{
        width: 100%;
        height: 100%;
        overflow: hidden;
        background-color: var(--secundary-color);
        transition: all 0.25s ease-out;
    }
    
    .proyect:hover .large__button--glow {
        display: flex;
        opacity: 100;
    }

    .proyect:hover .proyect__image {
        filter: brightness(0.8);
    }

    @media only screen and (min-width: 768px) {
        .proyect:first-child {
            grid-row: span 3;   
        }
    }
</style>